  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: TUH EEG DEBUG",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/eeg/eeg_to_torch.py",
      "args": [
        "--input_directory",
        "data/projects/tuh_eeg/downloads/tuh_eeg_fast",
        "--output_directory",
        "data/pt_tuh_edf_test",
        "--notch_filter",
        "50",
        "60",
        "--bandpass_filter",
        "1",
        "48",
        "--tuh_eeg"
      ],
      "preLaunchTask": "remove-test-directory"
    },
    {
      "name": "Python: TUH EEG Prod",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/eeg/eeg_to_torch.py",
      "args": [
        "--input_directory",
        "data/projects/tuh_eeg/downloads/tuh_eeg",
        "--output_directory",
        "data/pt_tuh_eeg",
        "--notch_filter",
        "50",
        "60",
        "--bandpass_filter",
        "1",
        "48",
        "--tuh_eeg"
      ]
    },
    {
      "name": "Python: convert",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/crown-eeg-to-torch.py",
      "args": [
        "--input_directory",
        "data/sessions",
        "--output_directory",
        "data/pt_sessions",
        "--sampling_rate",
        "256",
        "--notch_filter",
        "50",
        "60",
        "--bandpass_filter",
        "1",
        "48"
      ]
    },
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "0"
      },
      "args": [
        "run",
        "--host",
        "0.0.0.0",
        "--port",
        "9000",
        "--no-debugger",
        "--no-reload"
      ],
      "jinja": true
    }
  ]
}
